<li class="list-group-item">
  <h1>Reviews:</h1>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class:"btn btn-primary review-btn" %>
  <% @restaurant.reviews.each do |review| %>
    <div class="box"><%= review.content %></div>
    <br>
  <% end %>
  <%= link_to "Go back", restaurants_path %>
</li>
